<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @form %>">
  <p>
    <strong>Full name:</strong>
    <%= @form.full_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @form.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @form.phone %>
  </p>

  <p>
    <strong>Message:</strong>
    <%= @form.message %>
  </p>

<div>
  <%= link_to "Edit this form", edit_form_path(@form) %> |
  <%= link_to "Back to forms", forms_path %>

  <%= button_to "Destroy this form", @form, method: :delete %>
</div>
